{% extends "JYGRevestimientosBundle::base.html.twig" %}
{% block javascripts %}
    <script src="{{ asset('bundles/jygrevestimientos/js/jquery.min.js') }}"></script>
    <script src="{{ asset('bundles/jygrevestimientos/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('bundles/jygrevestimientos/js/masonry.js') }}"></script>
    <script type="text/javascript">
		$(document).ready( function() {
					// init Masonry
					var $grid = $('.grid').masonry({
						itemSelector: '.grid-item',
						percentPosition: true,
						columnWidth: '.grid-sizer'
					});
					// layout Isotope after each image loads
					$grid.imagesLoaded().progress( function() {
						$grid.masonry();
					}); 
				});
	</script>
{% endblock %}
{% block title %}Revestimientos J&G - Productos{% endblock %}
{% block body %}
	<div class="page-header">
	  <h1>Productos</h1>
	</div>
	<div class="row">
		<!-- Barra de la Izquierda con los Tipos de Productos -->
		<div class="col-lg-4 col-sm-4 col-xs-12">
			<div class="list-group">
			  <a href="{{ path('_productos_tipo', { 'var': 'formateada' })  }}" class="list-group-item">
			    <h4 class="list-group-item-heading"><span class="glyphicon glyphicon-th-large" aria-hidden="true"></span> Lajas Formateadas</h4>
			    <p class="list-group-item-text">Lajas Formateadas.<br><small>Haga click para mostrar todos los productos de este tipo</small></p>
			  </a>
			  <a href="{{ path('_productos_tipo', { 'var': 'natural' })  }}" class="list-group-item">
			    <h4 class="list-group-item-heading"><span class="glyphicon glyphicon-th-large" aria-hidden="true"></span> Lajas Naturales</h4>
			    <p class="list-group-item-text">Lajas Naturales.<br><small>Haga click para mostrar todos los productos de este tipo</small></p>
			  </a>
			  <a href="{{ path('_productos_tipo', { 'var': 'otro' })  }}" class="list-group-item">
			    <h4 class="list-group-item-heading"><span class="glyphicon glyphicon-asterisk" aria-hidden="true"></span> Otros Productos</h4>
			    <p class="list-group-item-text">Selladores, Tablillas y Pisos Artesanales, Tacos, entre otros.<br><small>Haga click para mostrar todos los productos</small></p>
			  </a>
			</div>
		</div>
		<!-- Productos -->
		<div class="col-lg-8 col-sm-8 col-xs-12">
			<div class="row">
				<div class="grid">
				<div class="grid-sizer"></div>
		    		{% for entity in pagination %}
						<div class="grid-item">
							<div class="thumbnail">
								<img src="{{ asset('bundles/jygrevestimientos/images/materiales/') }}{% if entity.path == null %}no_disponible.png{% else %}{{ entity.path }}{% endif %}" class="img-responsive img-rounded">
								<div class="caption">
									<h3 class="naranja_logo"><center>{{ entity.nombre }}</center></h3>
									<table class="table table-condensed">
											<tr><th>Tipo</th><td>{{ entity.tipo }}</td></tr>
											{#{% if entity.tipo == 'Laja Natural'  %}#}
												<tr><th>Color</th><td>{{ entity.color }}</td></tr>
												{#<tr><th>Tam.</th><td>{{ entity.tamano }}</td></tr>
											{% endif %}#}
											{#{% if entity.tipo == 'Laja Formateada'  %}
												<tr><th>Color</th><td>{{ entity.color }}</td></tr>#}
												{% if entity.formato != '' %}<tr><th>Form.</th><td>{{ entity.formato }}</td></tr>{% endif %}
											{#{% endif %}
											{% if entity.tipo == 'Quimicos'  %}
												<tr><th>Unid.</th><td>{{ entity.unidad }} <abbr title="Litros por Unidad">LxU</abbr></td></tr>
											{% endif %}#}
										</table>
										<p><a href="{{ path('page_verProducto', { 'id': entity.id }) }}" class="btn btn-naranja btn-block" role="button">Ver MÃ¡s</a></p>
								</div>
							</div>
						</div>
					{% endfor %}
                </div>
			</div>
			<div class="row">
				<center>{{ knp_pagination_render(pagination) }}</center>
			</div>
		</div>
	</div>
{% endblock %}
{% block stylesheets %}
	<style type="text/css">
		.caption h3{
			font-size: 19px;
			margin-top: 0px;
		}
		.thumbnail {
			max-width: 245px;
		}
		.thumbnail img{
			width: 100%;
			height: auto;
		}
		p{
			margin: 0 0 0px;
		}
		.caption{
			padding: 5px 0 0 0px !important;
		}
		* {
			-webkit-box-sizing: border-box;
			-moz-box-sizing: border-box;
			box-sizing: border-box;
		}

		/* force scrollbar */
		html { overflow-y: scroll; }

		/* clear fix */
		.grid:after {
			content: '';
			display: block;
			clear: both;
		}

		/* ---- .grid-item ---- */

		.grid-sizer,
		.grid-item {
			width: 250px;
		}
		.grid-item {
			float: left;
		}
	</style>
{% endblock %}
