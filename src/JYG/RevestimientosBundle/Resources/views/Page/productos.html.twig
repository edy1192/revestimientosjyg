{% extends "JYGRevestimientosBundle::base.html.twig" %}

{% block title %}Revestimientos J&G - Productos{% endblock %}

{% block body %}
	<div class="page-header">
	  <h1>Productos</h1>
	</div>
	<div class="row">
		<!-- Barra de la Izquierda con los Tipos de Productos -->
		<div class="col-lg-4 col-sm-4 col-xs-12">
			<div class="list-group">
			  <a href="#" class="list-group-item active">
			    <h4 class="list-group-item-heading"><span class="glyphicon glyphicon-th-large" aria-hidden="true"></span> Lajas</h4>
			    <p class="list-group-item-text">Lajas Naturales y Formateadas.<br><small>Haga click para mostrar todos los productos de este tipo</small></p>
			  </a>
			  <a href="#" class="list-group-item">
			    <h4 class="list-group-item-heading"><span class="glyphicon glyphicon-asterisk" aria-hidden="true"></span> Químicos</h4>
			    <p class="list-group-item-text">Químicos para el mantenimiento de los revestimientos.<br><small>Haga click para mostrar todos los productos de este tipo</small></p>
			  </a>
			</div>
		</div>
		<!-- Productos -->
		<div class="col-lg-8 col-sm-8 col-xs-12">
			<div class="row">
				{% for flashMessage in app.session.flashbag.get('error') %}
		            <div class = "alert alert-danger">
		                {{ flashMessage }}
		            </div>
		        {% endfor %}
				{% for entity in entities %}
				<div class="col-lg-4 col-sm-6 col-xs-6">
					<div class="thumbnail">
						<img src="{{ asset('bundles/jygrevestimientos/images/materiales/') }}{{ entity.path }}" class="img-responsive img-rounded">
						<div class="caption">
							<h3><center>{{ entity.nombre }}</center></h3>
							<table class="table table-condensed">
								<tr><th>Tipo</th><td>{{ entity.tipo }}</td></tr>
								{% if entity.tipo == 'Laja Natural'  %}
									<tr><th>Color</th><td>{{ entity.color }}</td></tr>
									<tr><th>Tam.</th><td>{{ entity.tamano }}</td></tr>
								{% endif %}
								{% if entity.tipo == 'Laja Formateada'  %}
									<tr><th>Color</th><td>{{ entity.color }}</td></tr>
									<tr><th>Form.</th><td>{{ entity.formato }}</td></tr>
								{% endif %}
								{% if entity.tipo == 'Quimicos'  %}
									<tr><th>Unid.</th><td>{{ entity.unidad }}</td></tr>
								{% endif %}
							</table>
							<p><a href="{{ path('page_verProducto', { 'id': entity.id }) }}" class="btn btn-primary btn-block" role="button">Ver Más</a></p>
						</div>
					</div>
				</div>
				{% endfor %}
			</div>
		</div>
	</div>
{% endblock %}
{% block stylesheets %}
	<style type="text/css">
		.caption h3{
			font-size: 20px;
			margin-top: 0px;
		}
		.thumbnail img{
			width: 100%;
			height: auto;
		}
	</style>
{% endblock %}
