{% extends "JYGRevestimientosBundle::base.html.twig" %}

{% block title %}Revestimientos J&G - Productos{% endblock %}

{% block body %}
	<div class="page-header">
	  <h1>Productos</h1>
	</div>
	<div class="row">
		<!-- Barra de la Izquierda con los Tipos de Productos -->
		<div class="col-lg-4 col-sm-4 col-xs-12">
			<div class="list-group">
			  <a href="#" class="list-group-item active">
			    <h4 class="list-group-item-heading">Tipo de Producto 1</h4>
			    <p class="list-group-item-text">Descripci칩n del Producto.<br><small>Haga click para mostrar todos los productos de este tipo</small></p>
			  </a>
			  <a href="#" class="list-group-item">
			    <h4 class="list-group-item-heading">Tipo de Producto 2</h4>
			    <p class="list-group-item-text">Descripci칩n del Producto. Haga click para mostrar todos los productos de este tipo.</p>
			  </a>
			  <a href="#" class="list-group-item">
			    <h4 class="list-group-item-heading">Tipo de Producto 2</h4>
			    <p class="list-group-item-text">Descripci칩n del Producto. Haga click para mostrar todos los productos de este tipo.</p>
			  </a>
			</div>
		</div>
		<!-- Productos -->
		<div class="col-lg-8 col-sm-8 col-xs-12">
			<div class="row">
				{% for flashMessage in app.session.flashbag.get('error') %}
		            <div class = "alert alert-danger">
		                {{ flashMessage }}
		            </div>
		        {% endfor %}
				{% for entity in entities %}
				<div class="col-lg-4 col-sm-6 col-xs-6">
					<div class="thumbnail">
						<span class="label label-warning">{{ entity.precio }} Bs</span>
						<img src="{{ asset('bundles/jygrevestimientos/images/materiales/') }}{{ entity.path }}">
						<div class="caption">
							<h3>{{ entity.nombre }}</h3>
							<table class="table table-condensed">
								<tr><th>Tipo</th><td>{{ entity.tipo }}</td></tr>
								<tr><th>Color</th><td>{{ entity.color }}</td></tr>
								<tr><th>Tam.</th><td>{{ entity.formato }}</td></tr>
							</table>
							<p><a href="{{ path('page_verProducto', { 'id': entity.id }) }}" class="btn btn-info btn-sm btn-block" role="button">Ver M치s</a></p>
						</div>
					</div>
				</div>
				{% endfor %}
			</div>
		</div>
	</div>
{% endblock %}
{% block stylesheets %}
	<style type="text/css">
		.caption h3{
			font-size: 20px;
			margin-top: 0px;
		}
		.thumbnail img{
			width: 100%;
			height: auto;
		}
		.label{
			position: absolute;
			z-index: 1;
		}
	</style>
{% endblock %}
