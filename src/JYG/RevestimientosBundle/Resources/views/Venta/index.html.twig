{% extends 'JYGRevestimientosBundle::baseAdmin.html.twig' %}

{% block javascripts %}
    <script src="{{ asset('bundles/jygrevestimientos/js/jquery.min.js') }}"></script>
    <script src="{{ asset('bundles/jygrevestimientos/js/bootstrap.min.js') }}"></script>
{% endblock %}

{% block body -%}
    <div class="row">
        <div class="col-sm-9"><div class="page-header"><h1>Ventas</h1></div></div>
        <div class="col-sm-3">
        <a type="button" id="volver" class="btn btn-success btn-lg btn-block" href="{{ path('venta_new') }}">Realizar Nueva Venta</a>
        </div>
    </div>

    <div class="panel panel-default">
    <table class="table table-striped table-condensed records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Fecha</th>
                <th>Comprador</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.id }}</td>
                <td>{% if entity.fecha %}{{ entity.fecha|date('d/m/Y H:i', timezone="America/Caracas") }}{% endif %}</td>
                <td><a href="{{ path('venta_show', { 'id': entity.id }) }}">{{ entity.comprador }}</a></td>
                <td>
                <div class="dropdown pull-right">
                  <button class="btn btn-sm btn-primary dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                    Opciones
                    <span class="caret"></span>
                  </button>
                  <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu1">
                    <li><a href="{{ path('venta_show', { 'id': entity.id }) }}">Ver Detalles de la Compra</a></li>
                    <li><a href="{{ path('venta_edit', { 'id': entity.id }) }}">Modificar la Compra</a></li>
                  </ul>
                </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
</div>
    {% endblock %}
