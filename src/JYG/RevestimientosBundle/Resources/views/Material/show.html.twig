{% extends 'JYGRevestimientosBundle::baseAdmin.html.twig' %}
{% block javascripts %}
    <script src="{{ asset('bundles/jygrevestimientos/js/jquery.min.js') }}"></script>
    <script src="{{ asset('bundles/jygrevestimientos/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('bundles/jygrevestimientos/js/forms.js') }}"></script>
    <script src="{{ asset('bundles/jygrevestimientos/js/modalDelEdit.js') }}"></script>
{% endblock %}

{% block body %}
    <div class="page-header">
        <h2>Producto / <small>{{ entity.nombre }}</small></h2>
    </div>
    <div class="row">
        <div class="col-lg-8 col-sm-8 col-xs-12">
            <table class="table table-striped record_properties">
                <thead>
                    <tr>
                        <th colspan="3"><h3 style="margin-top:0px;" class="naranja_logo">Detalles del Producto</h3></th>
                        <th><a href="{{ path('material') }}" class="btn btn-primary btn-block" type="button">Volver</a></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th>Código</th>
                        <td>{{ entity.codigo }}</td>
                        <th>Tipo</th>
                        <td>{{ entity.tipo }}</td>
                    </tr>
                    <tr>
                        <th>Nombre</th>
                        <td>{{ entity.nombre }}</td>
                        <th>Color</th>
                        <td>{{ entity.color }}</td>
                    </tr>
                    <tr>
                        <th>Precio de Compra</th>
                        <td>{{ entity.preciocompra }} Bs</td>
                        <th>Precio de Venta</th>
                        <td>{{ entity.precioventa }} Bs</td>

                    </tr>
                    <tr>
                        <th>Formato</th>
                        {% if entity.formato == ''  %}
                            <td>No Aplica</td>
                        {% else %}
                            <td>{{ entity.formato }}</td>
                        {% endif %}
                        <th>Tamaño</th>
                        {% if entity.tamano == ''  %}
                            <td>No Aplica</td>
                        {% else %}
                            <td>{{ entity.tamano }}</td>
                        {% endif %}
                    </tr>
                    <tr >
                        <th>Unidad</th>
                        {% if entity.unidad == ''  %}
                            <td>No Aplica</td>
                        {% else %}
                            <td>{{ entity.unidad }}</td>
                        {% endif %}
                        <th>Depósitos</th>
                        <td colspan="3">
                            <table class="table table-condensed table-bordered" style="width: 100%;">
                                <thead>
                                    <tr>
                                        <th>Depósito</th>
                                        <th>Cantidad</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for almacen in entity.almacenes %}<tr>
                                        <td>{{ almacen.nombrealmacen }}</td>
                                        <td>{{ almacen.cantmaterialdisponible }} mts</td>
                                    </tr>{% endfor %}
                                </tbody>
                            </table>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <a href="{{ path('material_edit', { 'id': entity.id }) }}" class="btn btn-success btn-block" type="button">Modificar Datos</a></td>
                        <td colspan="2"><a type="button" class="btn btn-danger btn-block" data-toggle="modal" id="Modal" data-target="#delEditProducto">Eliminar Producto</a></td>
                    </tr>
                </tbody>
            </table>
            
        </div>
        <div class="col-lg-4 col-sm-4 col-xs-12">
            <div id="textContacto"><h3>{{ entity.nombre }}</h3><p>{{ entity.formato }}</p></div>
            <div id="imgContacto"></div>
        </div>
    </div>
    <!-- el modal tio -->
    <div class="modal fade" id="delEditProducto" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
        <div class="modal-dialog modal-lg" >
            <div class="modal-content bodies">
                <center><h3>¿Está seguro que desea eliminar el productos y sus datos?</h3></center><br>
                <div class="row">
                <div class="col-sm-6">{{ form(delete_form) }}</div>
                <div class="col-sm-6"><button type="button" class="btn btn-primary btn-block" data-dismiss="modal">Cancelar</button></div></div>
            </div>
        </div>
    </div>
    <!-- el modal tio -->
{% endblock %}
{% block stylesheets %}
    <style type="text/css">
        #imgContacto{
            background-image: url('{{ asset("bundles/jygrevestimientos/images/materiales/") }}{{ entity.path }}');
            background-size: 100% 300px;
            background-repeat: no-repeat;
            min-height: 400px;
            max-width: 400px;
            /*background-color: rgba(0, 135, 64, 0.56);*/
            border-radius: 5px;
        }
        #textContacto{
            position: absolute;
            bottom: 0;
            z-index: 1;
            padding: 0px 10px 10px 10px;
        }
    </style>
{% endblock %}
