{% extends 'JYGRevestimientosBundle::baseAdmin.html.twig' %}

{% block javascripts %}
	<script src="{{ asset('bundles/jygrevestimientos/js/jquery.min.js') }}"></script>
	<script src="{{ asset('bundles/jygrevestimientos/js/forms.js') }}"></script>
    <script src="{{ asset('bundles/jygrevestimientos/js/campomaterial.js') }}"></script>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-sm-8"><div class="page-header"><h1>Añadir Nuevo Producto</h1></div></div>
        <div class="col-sm-4"><a id="volver" href="{{ path('material') }}" class="btn btn-primary pull-right" type="button"><span class="glyphicon glyphicon-share-alt" aria-hidden="true"></span>  Regresar a lista de Productos</a></div>
    </div>
    {{ form_start(form) }}
    <div class="row">
        {% for flashMessage in app.session.flashbag.get('cod') %}
            <div class = "alert alert-danger alert-dismissable">
                <button class="close" aria-hidden="true" data-dismiss="alert" type="button">×</button>
                {{ flashMessage }}
            </div>
        {% endfor %}
        <div class="col-lg-4 col-sm-4 col-xs-12">
            {{ form_row(form.codigo) }}
            {{ form_row(form.tipo) }}
            {{ form_row(form.tamano) }}
            {{ form_row(form.formato) }}
            {{ form_row(form.unidad) }}
        </div>
        <div class="col-lg-4 col-sm-4 col-xs-12">
            {{ form_row(form.color) }}
            {{ form_row(form.nombre) }}
            {{ form_row(form.preciocompra) }}
            {{ form_row(form.precioventa) }}
            {{ form_row(form.file) }}
        </div>
        <div class="col-lg-4 col-sm-4 col-xs-12">
            {{ form_row(form.almacenes) }}
        </div>
	</div>
    <div class="row">
        <div class="col-sm-8">{{ form_widget(form.submit) }}</div>
    </div>
    {{ form_end(form) }}
{% endblock %}