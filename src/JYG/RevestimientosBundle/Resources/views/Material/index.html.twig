{% extends 'JYGRevestimientosBundle::base.html.twig' %}

{% block body %}
    <div class="page-header">
        <h1 class="L_h1">Productos</h1>
        <a class="l_a" href="{{ path('material_new') }}"><button class="btn btn-success" type="button">AÃ±adir un nuevo Producto</button></a>
    </div>
    <table class="table records_list">
        <thead>
            <tr>
                <th>Codigo</th>
                <th>Formato</th>
                <th>Color</th>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Tipo</th>
                <th>Imagen</th>
                <th>Menu</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('material_show', { 'id': entity.id }) }}">{{ entity.codigo }}</a></td>
                <td>{{ entity.formato }}</td>
                <td>{{ entity.color }}</td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.precio }} Bs</td>
                <td>{{ entity.tipo }}</td>
                <td style="width: 119px"><img src="{{ asset('bundles/jygrevestimientos/images/materiales/') }}{{ entity.path }}" width="100px" height="auto"></td>
                <td style="max-width: 50px;">
                <div class="dropdown pull-right">
                  <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                    Opciones
                    <span class="caret"></span>
                  </button>
                  <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu1">
                    <li><a href="{{ path('material_show', { 'id': entity.id }) }}">Ver</a></li>
                    <li><a href="{{ path('material_edit', { 'id': entity.id }) }}">Modificar</a></li>
                  </ul>
                </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
{% block stylesheets %}
    <style type="text/css">
        .l_a {
            float: right;
        }
    </style>
{% endblock %}
