{% extends 'JYGRevestimientosBundle::base.html.twig' %}
{% block javascripts %}
    <script src="{{ asset('bundles/jygrevestimientos/js/datatable.min.js') }}"></script>
    <script type="text/javascript">
        $(document).ready(function(){
            $('#myTable').DataTable({
                "bSort" : false
            });
        });
    </script>
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-sm-10"><div class="page-header"><h1>Lista de Productos</h1></div></div>
        <div class="col-sm-2"><a id="volver" href="{{ path('material_new') }}" class="btn btn-success pull-right" type="button">AÃ±adir un nuevo Producto</a></div>
    </div>
    <div class="panel panel-default">
    <table class="table table-striped table-condensed records_list" id="myTable">
        <thead>
            <tr style="border-top: solid 1px #ddd;">
                <th>Imagen</th>
                <th>Codigo</th>
                <th>Formato</th>
                <th>Color</th>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Tipo</th>
                <th>Disponibilidad</th>
                <th>Menu</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td style="width: 119px"><img src="{{ asset('bundles/jygrevestimientos/images/materiales/') }}{{ entity.path }}" width="100px" height="auto"></td>
                <td><a href="{{ path('material_show', { 'id': entity.id }) }}">{{ entity.codigo }}</a></td>
                <td>{{ entity.formato }}</td>
                <td>{{ entity.color }}</td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.precio }} Bs</td>
                <td>{{ entity.tipo }}</td>
                <td style="width: 240px;">
                    <table class="table table-condensed table-bordered" style="width: 220px;">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Cantidad</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for almacen in entity.almacenes %}<tr>
                                <td>{{ almacen.nombrealmacen }}</td>
                                <td>{{ almacen.cantmaterialdisponible }} mts</td>
                            </tr>{% endfor %}
                        </tbody>
                    </table>
                </td>
                <td>
                <div class="dropdown pull-right">
                  <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                    Opciones
                    <span class="caret"></span>
                  </button>
                  <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu1">
                    <li><a href="{{ path('material_show', { 'id': entity.id }) }}">Ver Detalles</a></li>
                    <li><a href="{{ path('material_edit', { 'id': entity.id }) }}">Modificar Datos</a></li>
                  </ul>
                </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/jygrevestimientos/css/datatable.min.css') }}">
{% endblock %}
