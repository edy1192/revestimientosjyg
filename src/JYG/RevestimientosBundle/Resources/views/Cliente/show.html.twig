{% extends 'JYGRevestimientosBundle::baseAdmin.html.twig' %}

{% block body -%}
    <div class="page-header">
        <div class="col-sm-8"><h2>Cliente / <small>{{ entity.nombre }}</small></h2></div>
        <div class="col-sm-4"><a id="volver" href="{{ path('cliente') }}" class="btn btn-success pull-right" type="button"><span class="glyphicon glyphicon-share-alt" aria-hidden="true"></span>  Regresar a lista de Clientes</a></div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-sm-12 col-xs-12">
            <table class="table table-striped table-bordered record_properties">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>RIF/Cédula</th>
                <td>{{ entity.rif }}</td>
            </tr>
            <tr>
                <th>Nombre del Cliente</th>
                <td>{{ entity.nombre }}</td>
            </tr>
            <tr>
                <th>Dirección del Cliente</th>
                <td>{{ entity.direccion }}</td>
            </tr>
            <tr>
                <th>Teléfono</th>
                <td>{{ entity.telefono }}</td>
            </tr>
        </tbody>
    </table>

        <div class="col-lg-6 col-sm-6 col-xs-12"><a class="btn btn-block btn-primary" href="{{ path('cliente_edit', { 'id': entity.id }) }}">Modificar datos del Cliente</a></div>
        <div class="col-lg-6 col-sm-6 col-xs-12">{{ form(delete_form) }}</div>
        
    </div>
</div>
{% endblock %}
