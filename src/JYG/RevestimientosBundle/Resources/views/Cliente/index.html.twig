{% extends 'JYGRevestimientosBundle::baseAdmin.html.twig' %}

{% block body -%}
<div class="row">
        <div class="col-sm-10"><div class="page-header"><h1>Listado de Clientes</h1></div></div>
        <div class="col-sm-2"><a id="volver" href="{{ path('cliente_new') }}" class="btn btn-success pull-right" type="button"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span>  Registrar un Nuevo Cliente</a></div>
    </div>

    <table class="table table-striped table-condensed records_list">
        <thead>
            <tr>
                <th>ID</th>
                <th>RIF</th>
                <th>Nombre del Cliente</th>
                <th>Dirección del Cliente</th>
                <th>Teléfono Cliente</th>
                <th>Opciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('cliente_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.rif }}</td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.direccion }}</td>
                <td>{{ entity.telefono }}</td>
                <td>
                <div class="dropdown pull-right">
                  <button class="btn btn-sm btn-primary dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                    Opciones
                    <span class="caret"></span>
                  </button>
                  <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu1">
                    <li><a href="{{ path('cliente_show', { 'id': entity.id }) }}">Ver Detalles Cliente</a></li>
                    <li><a href="{{ path('cliente_edit', { 'id': entity.id }) }}">Modificar Datos Cliente</a></li>
                  </ul>
                </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>
{% endblock %}
